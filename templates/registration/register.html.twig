{% extends 'registration/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    {# Sweet Alert #}
    <script src="{{ asset('app-assets/vendors/js/extensions/sweetalert2.all.min.js') }}"></script>
    <script src="{{ asset('app-assets/vendors/js/extensions/polyfill.min.js') }}"></script>
    {% for message in app.session.flashbag.get('error') %}
    <script>
        Swal.fire({
            position: 'bottom-end',
            type: 'error',
            title: '{{ message }}',
            showConfirmButton: false,
            timer: 3000,
            confirmButtonClass: 'btn btn-primary',
            buttonsStyling: false,
        })
    </script>
    {% endfor %}
    {{ form_start(registrationForm) }}
        <div class="form-label-group">
            {{ form_widget(registrationForm.username) }}
            <label for="registration_form_username">Username</label>
        </div>
        <div class="form-label-group">
            {{ form_widget(registrationForm.email) }}
            <label for="registration_form_email">Email</label>
        </div>
        <div class="form-label-group">
            {{ form_widget(registrationForm.plainPassword) }}
            <label for="registration_form_plainPassword">Password</label>
        </div>
        <div class="form-group row">
            <div class="col-12">
                <fieldset class="checkbox">
                    <div class="vs-checkbox-con vs-checkbox-primary">
                        {{ form_widget(registrationForm.agreeTerms) }}
                        <span class="vs-checkbox">
                            <span class="vs-checkbox--check">
                                <i class="vs-icon feather icon-check"></i>
                            </span>
                        </span>
                        <span class=""> I accept the terms & conditions.</span>
                    </div>
                </fieldset>
            </div>
        </div>
        <a href="{{ path('app_login') }}" class="btn btn-outline-primary float-left btn-inline mb-50">Connexion</a>
        <button type="submit" class="btn btn-primary float-right btn-inline mb-50">Inscription</a>
    {{ form_end(registrationForm) }}
{% endblock %}
