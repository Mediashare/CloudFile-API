{% extends 'base.html.twig' %}

{% block title %}{{ file.name }}{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Informations</h3>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Nom du fichier</span>
                            <span class="badge badge-success badge-pill">{{ file.name }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Mime Type</span>
                            <span class="badge badge-primary badge-pill">{{ file.mimeType }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Taille</span>
                            <span class="badge badge-warning badge-pill">{{ file.info.size }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Date de cr√©ation</span>
                            <span class="badge badge-info badge-pill">{{ file.createDate|date('d/m/Y H:i:s') }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-4 col-sm-6">
        <div class="card text-center">
            <a href="{{ path('api_download', {'id': file.id}) }}">
                <div class="card-content">
                    <div class="card-body">
                        <div class="avatar bg-rgba-success m-0 mb-1">
                            <div class="avatar-content">
                                <i class="feather icon-download text-success font-medium-5"></i>
                            </div>
                        </div>
                        <h2 class="text-bold-700">Download</h2>
                    </div>
                </div>
            </a>
        </div>
        <div class="card text-center">
            <a href="{{ path('api_show', {'id': file.id}) }}">
                <div class="card-content">
                    <div class="card-body">
                        <div class="avatar bg-rgba-info m-0 mb-1">
                            <div class="avatar-content">
                                <i class="feather icon-eye text-info font-medium-5"></i>
                            </div>
                        </div>
                        <h2 class="text-bold-700">Show</h2>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
{% endblock %}
