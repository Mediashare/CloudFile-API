<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Informations</h3>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Nom du container</span>
                            <span class="badge badge-success badge-pill">{{ container.name }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Description</span>
                            <span class="badge badge-success badge-pill">{{ container.description }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> API Key</span>
                            <span class="badge badge-primary badge-pill">{{ container.apiKey }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Date de mise à jour</span>
                            <span class="badge badge-info badge-pill">{{ container.updateDate|date('d/m/Y H:i:s') }}</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span> Date de création</span>
                            <span class="badge badge-info badge-pill">{{ container.createDate|date('d/m/Y H:i:s') }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="col-xl-6 col-md-4 col-sm-6">
            <div class="card text-center">
                <div class="card-content">
                    <div class="card-body">
                        <div class="avatar bg-rgba-info p-50 m-0 mb-1">
                            <div class="avatar-content">
                                <i class="feather icon-file text-info font-medium-5"></i>
                            </div>
                        </div>
                        <h2 class="text-bold-700">{{ container.files|length }}</h2>
                        <p class="mb-0 line-ellipsis">File(s)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-md-4 col-sm-6">
            <div class="card text-center">
                <div class="card-content">
                    <div class="card-body">
                        <div class="avatar bg-rgba-warning p-50 m-0 mb-1">
                            <div class="avatar-content">
                                <i class="feather icon-disc text-warning font-medium-5"></i>
                            </div>
                        </div>
                        <h2 class="text-bold-700">100Kb</h2>
                        <p class="mb-0 line-ellipsis">Stockage used</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
