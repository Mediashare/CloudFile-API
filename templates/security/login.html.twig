{% extends 'security/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <script src="{{ asset('app-assets/vendors/js/extensions/sweetalert2.all.min.js') }}"></script>
        <script src="{{ asset('app-assets/vendors/js/extensions/polyfill.min.js') }}"></script>
        <script>
            Swal.fire({
                position: 'bottom-end',
                type: 'error',
                title: '{{ error.messageKey|trans(error.messageData, "security") }}',
                showConfirmButton: false,
                timer: 3000,
                confirmButtonClass: 'btn btn-primary',
                buttonsStyling: false,
            })
        </script>
    {% endif %}

    <fieldset class="form-label-group form-group position-relative has-icon-left">
        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <div class="form-control-position">
            <i class="feather icon-user"></i>
        </div>
        <label for="inputEmail">Email</label>
    </fieldset>

    <fieldset class="form-label-group position-relative has-icon-left">
        <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" required>
        <div class="form-control-position">
            <i class="feather icon-lock"></i>
        </div>
        <label for="inputPassword">Password</label>
    </fieldset>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="form-group d-flex justify-content-between align-items-center">
        <div class="text-left">
            <fieldset class="checkbox">
                <div class="vs-checkbox-con vs-checkbox-primary">
                    <input type="checkbox" name="_remember_me">
                    <span class="vs-checkbox">
                        <span class="vs-checkbox--check">
                            <i class="vs-icon feather icon-check"></i>
                        </span>
                    </span>
                    <span class="">Remember me</span>
                </div>
            </fieldset>
        </div>
        {# <div class="text-right"><a href="#" class="card-link">Mot de passe oubli√©</a></div> #}
    </div>
    <a href="{{ path('app_register') }}" class="btn btn-outline-primary float-left btn-inline">Inscription</a>
    <button type="submit" class="btn btn-primary float-right btn-inline">Connexion</button>
</form>
{% endblock %}
